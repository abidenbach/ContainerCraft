<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<Pane prefHeight="600.0" prefWidth="400.0" style="-fx-background-color: #121212;" 
      xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.containercraft.controllers.InscriptionController">

    <children>
        <!-- Titre principal -->
        <Text fill="WHITE" layoutX="115.0" layoutY="50.0" text="ContainerCraft">
            <font>
                <Font name="Roboto" size="26.0" />
            </font>
        </Text>

        <!-- Champ : Nom -->
        <TextField fx:id="lastNameField" layoutX="50.0" layoutY="100.0" 
                   prefHeight="36.0" prefWidth="140.0" promptText="Nom *" 
                   style="-fx-background-color: #1E1E1E; -fx-text-fill: WHITE; -fx-prompt-text-fill: #888888;" />

        <!-- Champ : Prénom -->
        <TextField fx:id="firstNameField" layoutX="210.0" layoutY="100.0" 
                   prefHeight="36.0" prefWidth="140.0" promptText="Prénom *" 
                   style="-fx-background-color: #1E1E1E; -fx-text-fill: WHITE; -fx-prompt-text-fill: #888888;" />

        <!-- Champ : Adresse e-mail -->
        <TextField fx:id="emailField" layoutX="50.0" layoutY="160.0" 
                   prefHeight="36.0" prefWidth="300.0" promptText="Adresse e-mail *" 
                   style="-fx-background-color: #1E1E1E; -fx-text-fill: WHITE; -fx-prompt-text-fill: #888888;" />

        <!-- Champ : Nom d'utilisateur -->
        <TextField fx:id="usernameField" layoutX="50.0" layoutY="220.0" 
                   prefHeight="36.0" prefWidth="300.0" promptText="Nom d'utilisateur *" 
                   style="-fx-background-color: #1E1E1E; -fx-text-fill: WHITE; -fx-prompt-text-fill: #888888;" />

        <!-- Champ : Mot de passe -->
        <PasswordField fx:id="passwordField" layoutX="50.0" layoutY="280.0" 
                       prefHeight="36.0" prefWidth="300.0" promptText="Mot de passe *" 
                       style="-fx-background-color: #1E1E1E; -fx-text-fill: WHITE; -fx-prompt-text-fill: #888888;" />

        <!-- Champ : Confirmation de mot de passe -->
        <PasswordField fx:id="confirmPasswordField" layoutX="50.0" layoutY="340.0" 
                       prefHeight="36.0" prefWidth="300.0" promptText="Confirmation de mot de passe *" 
                       style="-fx-background-color: #1E1E1E; -fx-text-fill: WHITE; -fx-prompt-text-fill: #888888;" />

        <!-- Bouton d'inscription -->
        <Button fx:id="signupButton" layoutX="125.0" layoutY="400.0" 
                prefHeight="40.0" prefWidth="150.0" text="S'inscrire" 
                style="-fx-background-color: #5A189A; -fx-background-radius: 5;" 
                textFill="WHITE" />

        <!-- Lien pour la connexion -->
        <Hyperlink fx:id="loginLink" layoutX="100.0" layoutY="460.0" 
                   onAction="#handleLoginLink" text="Déjà un compte ? Connectez-vous" 
                   textFill="WHITE" underline="true" />
    </children>
</Pane>
