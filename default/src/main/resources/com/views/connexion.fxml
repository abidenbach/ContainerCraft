<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<Pane prefHeight="600.0" prefWidth="400.0" style="-fx-background-color: #121212;" 
      xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.containercraft.controllers.ConnexionController">

    <children>
        <!-- Logo principal -->
        <ImageView fitHeight="110.0" fitWidth="159.0" layoutX="127.0" layoutY="20.0" 
                   pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@/com/views/images/CCLogo_png.png" />
            </image>
        </ImageView>

        <!-- Titre de l'application -->
        <Text fill="WHITE" layoutX="115.0" layoutY="150.0" text="ContainerCraft">
            <font>
                <Font name="Roboto" size="26.0" />
            </font>
        </Text>

        <!-- Champ : Adresse e-mail ou nom d'utilisateur -->
        <TextField fx:id="usernameField" layoutX="50.0" layoutY="200.0" 
                   prefHeight="36.0" prefWidth="300.0" promptText="Adresse e-mail ou nom d'utilisateur *" 
                   style="-fx-background-color: #1E1E1E; -fx-text-fill: WHITE; -fx-prompt-text-fill: #888888;" />

        <!-- Champ : Mot de passe -->
        <PasswordField fx:id="passwordField" layoutX="50.0" layoutY="260.0" 
                       prefHeight="36.0" prefWidth="300.0" promptText="Mot de passe *" 
                       style="-fx-background-color: #1E1E1E; -fx-text-fill: WHITE; -fx-prompt-text-fill: #888888;" />

        <!-- Case à cocher : Se souvenir de moi -->
        <CheckBox fx:id="rememberMeCheckBox" layoutX="50.0" layoutY="320.0" 
                  mnemonicParsing="false" style="-fx-font-size: 14px; -fx-text-fill: WHITE; 
          -fx-base: transparent; -fx-padding: 0px; 
          -fx-shape: 'M0,0 L0,0 L0,0 L0,0'; -fx-background-insets: 0; 
          -fx-border-width: 0;" 
                  text="Se souvenir de moi" textFill="WHITE" />

        <!-- Lien : Mot de passe oublié -->
        <Hyperlink fx:id="forgotPasswordLink" layoutX="50.0" layoutY="360.0" 
                   style="-fx-font-size: 12px;" text="Mot de passe oublié ?" 
                   textFill="WHITE" underline="true" />

        <!-- Bouton : Connexion -->
        <Button fx:id="loginButton" layoutX="125.0" layoutY="400.0" 
                prefHeight="40.0" prefWidth="150.0" text="Connexion" 
                style="-fx-background-color: #5A189A; -fx-background-radius: 5;" 
                textFill="WHITE" />

        <!-- Lien : Créer un compte -->
        <Hyperlink fx:id="signupLink" layoutX="100.0" layoutY="460.0" 
                   onAction="#handleSignupLink" text="Pas encore inscrit ? Créez un compte" 
                   textFill="WHITE" underline="true" />
    </children>
</Pane>
